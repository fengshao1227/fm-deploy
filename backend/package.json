{
  "name": "fm-deploy-backend",
  "version": "1.0.0",
  "description": "FM项目自动化部署后端服务",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "typeorm migration:run -d src/config/database.ts",
    "migration:create": "typeorm migration:create",
    "migration:revert": "typeorm migration:revert -d src/config/database.ts",
    "seed": "ts-node src/seeds/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "deployment",
    "devops",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "node-ssh": "^13.1.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.6.2",
    "ssh2": "^1.17.0",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.17",
    "typescript": "^5.3.0",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/ssh2": "^1.15.5",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1"
  }
}
